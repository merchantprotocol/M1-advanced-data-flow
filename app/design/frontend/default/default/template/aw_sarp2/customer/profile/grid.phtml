?><?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php $profileCollection = $this->getCollection(); ?>
<div class="page-title">
    <h1><?php echo $this->__('My Subscriptions') ?></h1>
</div>
<?php echo $this->getPagerHtml(); ?>
<?php if ($profileCollection->getSize()) : ?>
    <table class="data-table" id="my-profiles-table">
        <col width="1" />
        <col />
        <col width="1" />
        <col width="1" />
        <col width="1" />
        <thead>
            <tr>
                <th><span class="nobr"><?php echo $this->__('Payment Reference ID'); ?></span></th>
                <th><span class="nobr"><?php echo $this->__('Status'); ?></span></th>
                <th><span class="nobr"><?php echo $this->__('Created At'); ?></span></th>
                <th><span class="nobr"><?php echo $this->__('Updated At'); ?></span></th>
                <th><span class="nobr"><?php echo $this->__('Payment Method'); ?></span></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($profileCollection as $profile) : ?>
                <tr>
                    <td><a href="<?php echo $this->getProfileLink($profile); ?>" title="<?php echo $this->__('View Subscription'); ?>"><?php echo $profile->getReferenceId(); ?></a></td>
                    <td><?php echo $profile->getStatusLabel(); ?></td>
                    <td><span class="nobr"><?php echo $this->formatDate($profile->getCreatedAt(), Mage_Core_Model_Locale::FORMAT_TYPE_MEDIUM, true); ?></span></td>
                    <td><span class="nobr"><?php echo $this->formatDate($profile->getUpdatedAt(), Mage_Core_Model_Locale::FORMAT_TYPE_MEDIUM, true); ?></span></td>
                    <td><?php echo $profile->getEngineLabel(); ?></td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <script type="text/javascript">decorateTable('my-profiles-table');</script>
<?php echo $this->getPagerHtml(); ?>
<?php else: ?>
    <p><?php echo $this->__('There are no recurring profiles yet.'); ?></p>
<?php endif ?>