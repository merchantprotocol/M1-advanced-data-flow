<config>
    <modules>
        <Datta_StoreLocator>
            <version>1.1.2</version>            
        </Datta_StoreLocator>
    </modules>
    <global>
        <blocks>
            <datta_storelocator>
                <class>Datta_StoreLocator_Block</class>
            </datta_storelocator>
        </blocks>
        <helpers>
            <datta_storelocator>
                <class>Datta_StoreLocator_Helper</class>
            </datta_storelocator>
        </helpers>
        <models>
            <datta_storelocator>
                <class>Datta_StoreLocator_Model</class>
                <resourceModel>datta_storelocator_resource</resourceModel>
            </datta_storelocator> 
            <datta_storelocator_resource>
                <class>Datta_StoreLocator_Model_Resource</class>
                <entities>
                    <store>
                        <table>datta_storelocator</table>
                    </store>
                    <stores>
                        <table>datta_storelocator_stores</table>
                    </stores>
                </entities>
            </datta_storelocator_resource>
        </models>
        <resources>
            <datta_storelocator_setup>
                <setup>
                    <module>Datta_StoreLocator</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </datta_storelocator_setup>
            <datta_storelocator_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </datta_storelocator_write>
            <datta_storelocator_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </datta_storelocator_read>
        </resources>
    </global>
    <frontend>
        <translate>
            <modules>
                <datta_storelocator>
                    <files>
                        <default>Datta/Datta_StoreLocator.csv</default>
                    </files>
                </datta_storelocator>
            </modules>
        </translate>
        <routers>
            <datta_storelocator>
                <use>standard</use>
                <args>
                    <module>Datta_StoreLocator</module>
                    <frontName>storelocator</frontName>
                </args>
            </datta_storelocator>
        </routers>
        <layout>
            <updates>
                <storelocator>
                    <file>datta/storelocator.xml</file>
                </storelocator>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <datta_storelocator>
                <use>admin</use>
                <args>
                    <module>Datta_StoreLocator</module>
                    <frontName>datta_storelocator</frontName>
                </args>
            </datta_storelocator>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Datta_StoreLocator>
                    <files>
                        <default>Datta/Datta_StoreLocator.csv</default>
                    </files>
                </Datta_StoreLocator>
            </modules>
        </translate>
        <layout>
            <updates>
                <storelocator>
                    <file>datta/storelocator.xml</file>
                </storelocator>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <storelocator>
            <general>
                <apiurl>http://maps.googleapis.com/maps/api/js?v=3</apiurl>
                <apisensor>1</apisensor>
                <direction>1</direction>
            </general>
        </storelocator>
    </default>
</config>