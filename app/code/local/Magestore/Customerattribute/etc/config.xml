<config>
    <modules>
        <Magestore_Customerattribute>
            <version>0.1.0</version>
        </Magestore_Customerattribute>
    </modules>
    <frontend>
        <routers>
            <customerattribute>
                <use>standard</use>
                <args>
                    <module>Magestore_Customerattribute</module>
                    <frontName>customerattribute</frontName>
                </args>
            </customerattribute>
        </routers>
        <layout>
            <updates>
                <customerattribute>
                    <file>customerattribute.xml</file>
                </customerattribute>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Customerattribute>
                    <files>
                        <default>Magestore_Customerattribute.csv</default>
                    </files>
                </Magestore_Customerattribute>
            </modules>
        </translate>
        <events>            
            <core_block_abstract_to_html_before>
                <observers>
                    <customer_atttribute_handle_block>
                        <type>singleton</type>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>blockToHtmlBefore</method>
                    </customer_atttribute_handle_block>
                </observers>
            </core_block_abstract_to_html_before>  
            <sales_order_place_after>
                <observers>
                    <sales_order_observer>
                        <type>singleton</type>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>exportNewOrder</method>
                    </sales_order_observer>
                </observers>
            </sales_order_place_after>  
            <sales_order_save_before>
                <observers>
                    <sales_order_save>
                        <type>singleton</type>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>salesOrderSaveBefore</method>
                    </sales_order_save>
                </observers>
            </sales_order_save_before>  
            <sales_order_save_after>
                <observers>
                    <sales_order_save>
                        <type>singleton</type>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>salesOrderSaveAfter</method>
                    </sales_order_save>
                </observers>
            </sales_order_save_after> 
            <sales_order_address_save_after>
                <observers>
                    <sales_order_address_save>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>salesOrderAddressAfterSave</method>
                    </sales_order_address_save>
                </observers>
            </sales_order_address_save_after>   
            <sales_quote_save_after>
                <observers>
                    <sales_quote>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>salesQuoteAfterSave</method>
                    </sales_quote>
                </observers>
            </sales_quote_save_after>
            <customer_save_after>
                <observers>
                    <customer_save_after_model_Observer>
                        <type>singleton</type>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>customer_save_after</method>
                    </customer_save_after_model_Observer>
                </observers>
            </customer_save_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <customerattributeadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_Customerattribute</module>
                    <frontName>customerattributeadmin</frontName>
                </args>
            </customerattributeadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <customerattribute>
                    <file>customerattribute.xml</file>
                </customerattribute>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Customerattribute>
                    <files>
                        <default>Magestore_Customerattribute.csv</default>
                    </files>
                </Magestore_Customerattribute>
            </modules>
        </translate>
        <events>
            <adminhtml_customer_save_after>
                <observers>
                    <magestore_customerattribute_model_Observer>
                        <type>singleton</type>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>saveAttribute</method>
                    </magestore_customerattribute_model_Observer>
                </observers>
            </adminhtml_customer_save_after>
            <sales_order_place_after>
                <observers>
                    <sales_order_observer>
                        <type>singleton</type>
                        <class>Magestore_Customerattribute_Model_Observer</class>
                        <method>exportNewOrder</method>
                    </sales_order_observer>
                </observers>
            </sales_order_place_after> 
        </events>
    </adminhtml>   
    <global>
        <models>
            <customerattribute>
                <class>Magestore_Customerattribute_Model</class>
                <resourceModel>customerattribute_mysql4</resourceModel>
            </customerattribute>
            <customerattribute_mysql4>
                <class>Magestore_Customerattribute_Model_Mysql4</class>
                <entities>
                    <customerattribute>
                        <table>customerattribute</table>
                    </customerattribute>
                    <customeraddressattribute>
                        <table>customeraddressattribute</table>
                    </customeraddressattribute>
                    <orderattribute>
                        <table>orderattribute</table>
                    </orderattribute>
                </entities>
            </customerattribute_mysql4>
            <checkout>
                <rewrite>
                    <type_onepage>Magestore_Customerattribute_Model_Type_Onepage</type_onepage>
                </rewrite>
            </checkout>
        </models>
        <resources>
            <customerattribute_setup>
                <setup>
                    <module>Magestore_Customerattribute</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customerattribute_setup>
            <customerattribute_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customerattribute_write>
            <customerattribute_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customerattribute_read>
        </resources>
        <blocks>
            <customerattribute>
                <class>Magestore_Customerattribute_Block</class>
            </customerattribute>
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Magestore_Customerattribute_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
                    <customer_form_element_image>Magestore_Customerattribute_Block_Adminhtml_Managecustomer_Form_Element_Image</customer_form_element_image>
                    <customer_form_element_file>Magestore_Customerattribute_Block_Adminhtml_Managecustomer_Form_Element_File</customer_form_element_file>                    
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <customerattribute>
                <class>Magestore_Customerattribute_Helper</class>
            </customerattribute>
        </helpers>
        <!-- <events>
            <controller_action_predispatch>
                <observers>
                    <customerattribute_observers>
                        <class>customerattribute/observer</class>
                        <method>controllerActionPredispatch</method>
                    </customerattribute_observers>
                </observers>
            </controller_action_predispatch>
        </events> -->
    </global>
</config>