<config>
    <entities>
        <customer_customer eav="1">
	        <model>customer/customer</model>
	        <collection_model>customer/customer_collection</collection_model>
	        <table>customer/customer</table>
	        <children>
	            <address>
	                <model>advanceddataflow/customer_entity_address</model>
	                <type>customer_customer_address</type>
	                <prefix>address</prefix>
	                <relation>many</relation>
	                <getter>getAddresses</getter>
	            </address>
	        </children>
	        <attributes>
	            <real_customer_id translate="title">
	                <title>Customer ID</title>
	                <type>string</type>
	                <actions><all/></actions>
	                <sort_order>10</sort_order>
	                <static>0</static>
	                <primary>1</primary>
	                <unique>1</unique>
	            </real_customer_id>
	            <website_id translate="title">
	                <title>Website</title>
	                <type>select</type>
	                <required><add>1</add><edit>1</edit></required>
	                <source>advanceddataflow/customer_entity_customer_attribute_source_website</source>
	                <actions><all/></actions>
	                <sort_order>20</sort_order>
	                <static>0</static>
	            </website_id>
	            <store_id translate="title">
	                <title>Store</title>
	                <type>select</type>
	                <required><add>1</add></required>
	                <source>advanceddataflow/customer_entity_customer_attribute_source_store</source>
	                <actions><all/></actions>
	                <sort_order>30</sort_order>
	                <static>0</static>
	            </store_id>
	            <group_id translate="title">
	                <title>Customer Group</title>
	                <type>select</type>
	                <required><add>1</add></required>
	                <source>advanceddataflow/customer_entity_customer_attribute_source_group</source>
	                <actions><all/></actions>
	                <sort_order>40</sort_order>
	                <static>0</static>
	            </group_id>
	            <password translate="title">
	                <title>Password</title>
	                <type>string</type>
	                <actions><add/></actions>
	                <sort_order>45</sort_order>
	                <method_setter>1</method_setter>
	                <static>0</static>
	            </password>
	            <prefix translate="title">
	                <title>Prefix</title>
	                <type>string</type>
	                <actions><all/></actions>
	                <sort_order>50</sort_order>
	                <static>0</static>
	            </prefix>
	            <firstname translate="title">
	                <title>First Name</title>
	                <type>string</type>
	                <actions><all/></actions>
	                <sort_order>60</sort_order>
	                <static>0</static>
	            </firstname>
	            <middlename translate="title">
	                <title>Middle Name/Initial</title>
	                <type>string</type>
	                <actions><all/></actions>
	                <sort_order>70</sort_order>
	                <static>0</static>
	            </middlename>
	            <lastname translate="title">
	                <title>Last Name</title>
	                <type>string</type>
	                <actions><all/></actions>
	                <sort_order>80</sort_order>
	                <static>0</static>
	            </lastname>
	            <suffix translate="title">
	                <title>Suffix</title>
	                <type>string</type>
	                <actions><all/></actions>
	                <sort_order>90</sort_order>
	                <static>0</static>
	            </suffix>
	            <email translate="title">
	                <title>Email</title>
	                <type>string</type>
	                <actions><all/></actions>
	                <sort_order>100</sort_order>
	                <static>0</static>
	            </email>
	            <dob translate="title">
	                <title>Date Of Birth</title>
	                <type>date</type>
	                <actions><all/></actions>
	                <sort_order>100</sort_order>
	                <static>0</static>
	            </dob>
	            <taxvat translate="title">
	                <title>Tax/VAT Number</title>
	                <type>string</type>
	                <actions><all/></actions>
	                <sort_order>110</sort_order>
	                <static>0</static>
	            </taxvat>
	            <gender translate="title">
	                <title>Gender</title>
	                <type>select</type>
	                <source>advanceddataflow/customer_entity_customer_attribute_source_gender</source>
	                <actions><all/></actions>
	                <sort_order>120</sort_order>
	                <static>0</static>
	            </gender>
	            <is_subscribed translate="title">
	                <title>Subscribed to Newsletter?</title>
	                <type>boolean</type>
	                <actions><all/></actions>
	                <sort_order>130</sort_order>
	                <static>0</static>
	            </is_subscribed>
	            <is_active translate="title">
	                <title>Active</title>
	                <type>boolean</type>
	                <actions><all/></actions>
	                <sort_order>140</sort_order>
	                <static>0</static>
	            </is_active>
	        </attributes>
	    </customer_customer>
    </entities>
</config>
