<?xml version="1.0"?>
<config>
    <layout>
        <updates>
            <enigmaall module="Enigma_All">
                <file>enigma_all.xml</file>
            </enigmaall>
        </updates>
    </layout>

    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <enigmaall>
                                        <title>dasENIGMA - All</title>
                                    </enigmaall>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <events>
        <controller_action_predispatch>
            <observers>
                <enigmaall_exts>
                    <type>singleton</type>
                    <class>enigmaall/feed_extensions</class>
                    <method>check</method>
                </enigmaall_exts>
                <enigmaall_upds>
                    <type>singleton</type>
                    <class>enigmaall/feed_updates</class>
                    <method>check</method>
                </enigmaall_upds>
            </observers>
        </controller_action_predispatch>
    </events>
</config>